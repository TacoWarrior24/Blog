<%- include("partials/header.ejs") %>

<h1>Cookie Book üç™</h1>
<img src="/images/cookieBanner.jpg" alt="Cookie Banner" class="banner-image">

<div class="posts">
        <% posts.forEach((post, index) => { %>
            <div class="post">
                <h2><%= post.title %></h2>
                <p><%= post.description %></p>
                <a href="/edit/<%= index %>">
                  <button>Edit</button>
                </a>
                <form action="/delete/<%= index %>" method="POST">
                  <button id="deletePost" type="submit"><strong>X</strong></button>
                </form>
            </div>
        <% }) %>
    </div>

